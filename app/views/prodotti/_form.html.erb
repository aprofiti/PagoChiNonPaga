<%= simple_form_for @prodotto, url: impresa_prodotti_path(nome: params[:impresa_nome],id: params[:id]), :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :nome %>
  <%= error_span(@prodotto[:nome]) %>
  <%= f.input :prezzo %>
  <%= error_span(@prodotto[:prezzo]) %>
  <%= f.input :qta %>
  <%= error_span(@prodotto[:qta]) %>
  <%= f.text_area :descrizione, :class => "WYSIWYG" %>
  <%= error_span(@prodotto[:descrizione]) %>
  <%= f.previewbox :image %>
  <%= f.label :image %>
  <%= f.file_field :image %>
  <%= f.cropbox :image, height: 200, width: 300 %>

  <%= hidden_field_tag(:id_p, @prodotto.id) %>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                impresa_prodotti_path(id: @prodotto.impresa_id), :class => 'btn btn-default' %>
<% end %>
