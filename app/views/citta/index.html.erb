<%- model_class = Citta -%>
<div class="container">
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nome) %></th>
      <th><%= model_class.human_attribute_name(:provincia) %></th>
      <th><%= model_class.human_attribute_name(:regione) %></th>
      <th><%= model_class.human_attribute_name(:polo_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @citta.each do |citta| %>
      <tr>
        <td><%=  citta.id %></td>
        <td><%=link_to citta.nome, citta_path(nome: citta.nome, id: citta.id),method: :get %></td>
        <td><%= citta.provincia %></td>
        <td><%= citta.regione %></td>
        <td><%= citta.polo_id %></td>
        <td><%= citta.created_at %></td>

      </tr>
    <% end %>
  </tbody>
</table>
</div>
