<%- model_class = Cliente -%>
<div class="container">

  <div class="panel panel-default" style="margin-top: 10px;">
    <div class="panel-heading">
      <h4>Profilo <%=t '.title', :default => model_class.model_name.human.titleize %></h4>
    </div>
    <div class="panel-body">
      <dl class="datiProfilo dl-horizzontal">
        <div class="row">
          <div class="col col-md-3 col-md-offset-3">
            <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
            <dd><%= @cliente.nome %></dd>
          </div>
          <div class="col col-md-3">
            <dt><strong><%= model_class.human_attribute_name(:cognome) %>:</strong></dt>
            <dd><%= @cliente.cognome %></dd>
          </div>
        </div>
        <div class="row">
          <div class="col col-md-3 col-md-offset-3">
            <dt><strong><%= model_class.human_attribute_name(:cf) %>:</strong></dt>
            <dd><%= @cliente.cf %></dd>
          </div>
          <div class="col col-md-3">
            <dt><strong><%= model_class.human_attribute_name(:data_nascita) %>:</strong></dt>
            <dd><%= @cliente.data_nascita %></dd>
          </div>
        </div>
        <div class="row">
          <div class="col col-md-3 col-md-offset-3">
            <dt><strong><%= model_class.human_attribute_name(:indirizzo) %>:</strong></dt>
            <dd><%= @cliente.indirizzo %></dd>
          </div>
          <div class="col col-md-3">
            <dt><strong><%= model_class.human_attribute_name(:telefono) %>:</strong></dt>
            <dd><%= @cliente.telefono %></dd>
          </div>
        </div>
        <div class="page-header"></div>
        <div class="row">
          <div class="col col-md-3 col-md-offset-3">
            <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
            <dd><%= @cliente.email %></dd>
          </div>
          <div class="col col-md-3">
            <%= link_to t('.ModificaDati', :default => t("helpers.links.ModificaDati")),
                          edit_cliente_path(@cliente), :class => 'btn btn-success' ,method: :get%>
          </div>
        </div>
        </dl>
    </div>
  </div>

  <div class="panel panel-success">
    <div class="panel-heading">
      <h4>Ordini Attivi</h4>
    </div>
    <div class="panel-body">
      <%= render "ordini" %>
    </div>
  </div>

  <div class="panel panel-danger">
    <div class="panel-heading">
      <h4>Elimina Profilo Utente</h4>
    </div>
    <div class="panel-body">
      <%= link_to t('.elimina', :default => t("helpers.links.elimina")),
                    cliente_path(@cliente),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-danger' %>
      <b>Attenzione le modifiche non possono essere annullate!</b>
    </div>

</div>
