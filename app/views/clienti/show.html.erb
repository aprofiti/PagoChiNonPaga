<%- model_class = Cliente -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @cliente.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cognome) %>:</strong></dt>
  <dd><%= @cliente.cognome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @cliente.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data_nascita) %>:</strong></dt>
  <dd><%= @cliente.data_nascita %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cf) %>:</strong></dt>
  <dd><%= @cliente.cf %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telefono) %>:</strong></dt>
  <dd><%= @cliente.telefono %></dd>


  <dt><strong><%= model_class.human_attribute_name(:indirizzo_id) %>:</strong></dt>
  <dd><%= @cliente.indirizzo_id %></dd>
</dl>

<%= link_to t('.ordini', :default => t("helpers.links.ordini")),
              ordini_path, :class => 'btn btn-default' ,method: :get %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_cliente_path(@cliente), :class => 'btn btn-default' ,method: :get%>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              cliente_path(@cliente),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
