<%- model_class = Ordine -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:data) %>:</strong></dt>
  <dd><%= @ordine.created_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stato) %>:</strong></dt>
  <dd><%= @ordine.stato %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cliente_id) %>:</strong></dt>
  <dd><%= @ordine.cliente_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:impresa_id) %>:</strong></dt>
  <dd><%= @ordine.impresa_id %></dd>
  <!-- Stampa la lista dei prodotti -->
  <div class="page-header">
    <h3>Lista dei prodotti</h3>
  </div>
  <% @ordine.prodotti.each do |prodotto| %>
    <dt><strong><%= model_class.human_attribute_name(:prodotto_id) %>:</strong></dt>
    <dd><%= prodotto.id %></dd>
    <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
    <dd><%= prodotto.nome %></dd>
    <dt><strong><%= model_class.human_attribute_name(:impresa) %>:</strong></dt>
    <dd><%= prodotto.impresa.nome %></dd>
  <% end %>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              ordini_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_ordine_path(@ordine), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              ordine_path(@ordine),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
