<%- model_class = Titolare -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @titolare.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cognome) %>:</strong></dt>
  <dd><%= @titolare.cognome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @titolare.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cf) %>:</strong></dt>
  <dd><%= @titolare.cf %></dd>
  <dt><strong><%= model_class.human_attribute_name(:piva) %>:</strong></dt>
  <dd><%= @titolare.piva %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data_nascita) %>:</strong></dt>
  <dd><%= @titolare.data_nascita %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telefono) %>:</strong></dt>
  <dd><%= @titolare.telefono %></dd>
  <dt><strong><%= model_class.human_attribute_name(:indirizzo_id) %>:</strong></dt>
  <dd><%= @titolare.indirizzo_id %></dd>
</dl>

<div class="page-header">
  <h3><%= model_class.human_attribute_name(:imprese) %></h3>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:nome) %></th>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @titolare.getImprese.each do |impresa| %>
      <tr>
        <td><%= link_to impresa.nome,impresa_path(nome: impresa.nome, id: impresa.id),method: :get %></td>
        <td><%= impresa.id %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      impresa_path(nome: impresa.nome, id: impresa.id), :class => 'btn btn-default btn-xs',method: :get %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_impresa_path(nome: impresa.nome, id: impresa.id), :class => 'btn btn-default btn-xs',method: :get %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      impresa_path(impresa),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.back', :default => t("helpers.links.back")),
              root_path, :class => 'btn btn-default',method: :get  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_titolare_path(@titolare), :class => 'btn btn-default',method: :get %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              titolare_path(@titolare),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
