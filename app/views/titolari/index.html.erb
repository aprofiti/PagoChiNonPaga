<%- model_class = Titolare -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nome) %></th>
      <th><%= model_class.human_attribute_name(:cognome) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:cf) %></th>
      <th><%= model_class.human_attribute_name(:piva) %></th>
      <th><%= model_class.human_attribute_name(:data_nascita) %></th>
      <th><%= model_class.human_attribute_name(:telefono) %></th>
      <th><%= model_class.human_attribute_name(:indirizzo_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @titolari.each do |titolare| %>
      <tr>
        <td><%= link_to titolare.id, titolare_path(titolare) %></td>
        <td><%= titolare.nome %></td>
        <td><%= titolare.cognome %></td>
        <td><%= titolare.email %></td>
        <td><%= titolare.cf %></td>
        <td><%= titolare.piva %></td>
        <td><%= titolare.data_nascita %></td>
        <td><%= titolare.telefono %></td>
        <td><%= titolare.indirizzo_id %></td>
        <td><%=l titolare.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_titolare_path(titolare), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      titolare_path(titolare),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_titolare_path,
            :class => 'btn btn-primary' %>
