<%- model_class = Sottocategorium -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @sottocategoria.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:categoria_id) %>:</strong></dt>
  <dd><%= @sottocategoria.categoria_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              sottocategorie_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_sottocategoria_path(@sottocategoria), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              sottocategoria_path(@sottocategoria),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
