<%= simple_form_for @sottocategoria, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :nome %>
  <%= error_span(@sottocategoria[:nome]) %>
  <%= f.input :categoria_id %>
  <%= error_span(@sottocategoria[:categoria_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                sottocategorie_path, :class => 'btn btn-default' %>
<% end %>
