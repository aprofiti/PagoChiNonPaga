<!-- Jumbotron -->
<div id="welcomepage" class="jumbotron jumbotronColor">
  <h1 class="text-center">PAGO CHI NON PAGA</h1>
  <!-- Barra di Ricerca nel Jumbotron -->
  <div class="">
    <%= render "layouts/home/barra_ricerca_home" %>
  </div>
  <p class="txtJumbotron text-center">Rinuncia al pizzo!<br> Entra nella nostra rete di imprese per un mondo migliore</p>
</div>
<div class="container">
  <div class="row">
  <!-- Statistiche Sezione SX -->
    <div class="col-md-6">
      <div class="statistiche">
        <h3>I Nostri Numeri:</h3>
      </div>
      <!-- Dati Piattaforma-->
      <div id="DatiStatistiche" class="row">
        <div class="col-xs-7 col-xs-offset-1">
          <h4>Attivita' Aderenti:</h4>
        </div>
        <div class="col-sm-2 text-right">
          <h4><%= Impresa.count %></h4>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-7 col-xs-offset-1">
          <h4>Marchio Certificato:</h4>
        </div>
        <div class="col-sm-2 text-right">
          <h4><%= Impresa.get_num_imprese %></h4>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-7 col-xs-offset-1">
          <h4>Utenti Iscritti:</h4>
        </div>
        <div class="col-sm-2 text-right">
          <h4><%= Utente.get_num_utenti %></h4>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-7 col-xs-offset-1">
          <h4>Sostenitori:</h4>
        </div>
        <div class="col-sm-2 text-right">
          <h4><%= Cliente.get_num_clienti %></h4>
        </div>
      </div>
    </div>
    <!-- Statistiche Sezione DX -->
    <div class="col-md-6">
      <div class="statistiche">
        <h3>5 Negozi per te:</h3>
      </div>
      <!-- Imprese -->
      <% Impresa.get_random_imprese.each do |impresa| %>
        <div id="DatiStatistiche" class="row">
          <div class="col-xs-11 col-xs-offset-1">
            <h4><%= link_to impresa.nome, impresa_path(nome: impresa.nome, id: impresa.id), method: :get %></h4>
            <h5>
              <%
                # Stampo la lista delle categorie separate da una virgola
                str = ""
              %>
              <% impresa.getCategorie.each do |categoria| %>
                <% str += "#{categoria}, " %>
              <% end %>
              <%=
                # Elimino la punteggiatura all'ultima categoria
                str.gsub(/\, $/, '')
              %>
            </h5>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>
